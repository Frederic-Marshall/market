<h2>Log in</h2>

<div class="form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-field" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <label class="form-group checkbox style-c">
        <%= f.check_box :remember_me, class: "checkbox" %>
        <div class="checkbox__checkmark"></div>
        <%= f.label :remember_me, class: "checkbox__body" %>
      </label>
    <% end %>

    <div class="form-group">
      <%= f.submit "Log in", class: "form-submit" %>
    </div>
  <% end %>
</div>

<div class="form-links">
  <%= render "devise/shared/links" %>
</div>