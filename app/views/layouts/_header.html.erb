<header class="header">
  <div class="headerNav">
		
    <div class="headerNav__item logoName">
			<%= link_to root_path do %>
				<%= image_tag("Logo.png", class: "logo") %>
			<% end %>
		</div>
    
  </div>
	
	<div class="headerNav">
		    
		<div class="headerNav__item searchPlains">
      <form action="">
        <input class="inputSearch" type="text" placeholder="Поиск по маркету" name="search" id="searcInput">
        <button type="submit" onclick="console.log('hello')">
          <%= image_tag("magnifying-glass-solid 1.svg", class: "imgSearch") %>
        </button>
      </form>
    </div>

	</div>

	<div class="headerNav">

		<div class="headerNav__item like_and_buy">
			<%= link_to root_path do %>
				<%= image_tag("heart-regular 1.svg", class: "imgSearch") %>
        Избранное
			<% end %>
    </div>
	
	</div>

	<div class="headerNav">
		<% if current_user.present? %>
			<div class="headerNav__item profilePhoto">
				<% if current_user.avatar.attached? %>
					<%= link_to current_user do %>
						<%= image_tag(current_user.avatar_thumbnail, class: "rounded-circle header-avatar") %>
					<% end %>
				<% else %>
					<%= link_to current_user.path do %>
						<%= image_tag("default_profile.png", height: 150, width: 150, class: "rounded-circle header-avatar") %>
					<% end %>
				<% end %>
			</div>
		<% else %>
			<%= link_to "Войти", new_user_session_path, class: "btn-header link-header" %>
		<% end %>			
	</div>
</header>

<%= render "layouts/bottom_header" %>